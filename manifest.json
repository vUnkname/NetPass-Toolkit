{
  "manifest_version": 3,
  "name": "NetPass Toolkit",
  "version": "2.0",
  "description": "Generate secure passwords and network identifiers with customizable options",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "permissions": ["clipboardWrite"],
  "host_permissions": ["*://raw.githubusercontent.com/*"]
} 